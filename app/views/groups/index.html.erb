<p style="color: green"><%= notice %></p>

<h1>Groups</h1>

<div id="groups">
  <% @groups.each do |group| %>
    <%= render group %>
    <p>
      <%= link_to "Show this category", group_path(group) %>
    </p>
  <% end %>
</div>

<%= link_to new_group_path do %>
  <%= image_tag 'add-button.png', :class => 'action-icon', :alt => "add new"%>
<%end%>
